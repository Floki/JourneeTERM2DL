<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nadt.keepthebeatsurvival"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> 
    

    <application
        android:noHistory="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:name="com.nadt.keepthebeatsurvival.title.Title"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity 
            android:noHistory="true"
            android:screenOrientation="portrait" 
            android:name="com.nadt.keepthebeatsurvival.game.Game"></activity>
		<activity 
		    android:noHistory="true"
		    android:screenOrientation="portrait" 
		    android:name="com.nadt.keepthebeatsurvival.parameters.Parameterseters"></activity>
		<activity 
		    android:noHistory="true"
		    android:screenOrientation="portrait" 
		    android:name="com.nadt.keepthebeatsurvival.ScoreActivity"></activity>

    </application>

</manifest>
